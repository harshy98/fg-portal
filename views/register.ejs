    <div id="full-container"> 
         <!-- form -->
        <div id="wholeBody" class="container">
            <form action="/register" method="POST">
                <div class="form-row">
                    <div class=" col-sm-12 col-md-6 form-group ">
                        <label for="firstName">First Name:</label>
                        <input name="firstName" type="text" class="form-control" id="firstlName" placeholder="First Name *" required>
                    </div>
                    <div class="col-sm-12 col-md-6 form-group ">
                        <label for="lastName">Last Name:</label>
                        <input name="lastName" type="text" class="form-control" id="lastName" placeholder="Last Name *" required>
                    </div>
                </div>

                <div>
                    <label for="male">Male</label> &nbsp;
                    <input name="gender" type="radio" value="Male">&nbsp; &nbsp; &nbsp;  &nbsp;  &nbsp;
                    <label for="female">Female</label> &nbsp;
                    <input name="gender" type="radio" value="female">&nbsp; &nbsp; &nbsp; &nbsp;  &nbsp;
                    <label for="other">Other</label> &nbsp;
                    <input name="gender" type="radio" value="other">
                </div>
                <div class="form-row">
                    <div class="col-sm-12 col-md-6 form-group ">
                        <label for="dob">Date of Birth:</label>
                        <input name="dob" type="text" class="form-control" id="dob" placeholder="YYYY-MM-DD" required>
                    </div>

                    <div class="col-sm-12 col-md-6 form-group  ">
                        <label for="contact">Contact No:</label>
                        <div class="input-group md-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">+91</div>
                            </div>
                            <input name="contact" type="text" class="form-control" id="contact" placeholder="" required>
                        </div>
                    </div>
                </div>
                
                <div class="form-row">

                    <div class="col-12 form-group " id="textarea-container">
                        <label for="address">Address:</label>
                        <textarea name="address" rows ="2" cols="2000" class="form-control" id="address" rows="3" placeholder="1234 Market Street *"></textarea>
                   </div>
                </div>

                <div class="form-row">
                    <div class="col-sm-12 col-md-4 form-group">
                        <label for="email">Email address:</label>
                        <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com *" required>
                    </div>
                    <div class="col-sm-12 col-md-4 form-group">
                        <label for="email">Your LinkedIn profile:</label>
                        <input name="linkedin" type="url" class="form-control" id="linkedin" placeholder="https://www.linkedin.com/*">
                    </div>
                    <div class="col form-group col-12 col-sm-12">
                    <label for="user_id">User ID:</label>
                    <input name="user_id" class="form-control" id="user_id" placeholder="fg_user" required>
                    </div>
                    <div class="col-sm-12 col-md-4 form-group">
                        <label for="password">Password:</label>
                        <input name="password" type="password" class="form-control" id="password" pattern=".{8,16}" placeholder="Password *" required title="8 to 16 characters">
                    </div>
                    <div class="col-sm-12 col-md-4 form-group">
                        <label for="password">Confirm Password:</label>
                        <input name="password2" type="password" class="form-control" id="password" pattern=".{8,16}" placeholder="Password *" required title="8 to 16 characters">
                    </div>
                </div>
                <div class="form-row form-checkbox">
                    <div class="col-sm-12  form-group">
                        <input id="check" type="checkbox" required>
                        <label for="check">I accept all the terms and conditions.
                        </label>
                    </div>
                
                </div>


                <div class="container d-flex flex-column justify-content-around mt-4 mb-5">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Submit</button>
                </div>


            </form>
        </div>
    </div>

